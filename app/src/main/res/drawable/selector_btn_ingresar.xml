<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@android:color/white" />
            <gradient android:angle="-90" android:startColor="@color/blanco_60" android:endColor="@color/blanco_60"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@android:color/white" />
            <solid android:color="@color/blanco_60"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                android:color="@android:color/white" />
            <gradient android:angle="-90"
                android:startColor="@color/negro_25" android:endColor="@color/negro_25" />
        </shape>
    </item>
</selector>